---
import BaseLayouts from './BaseLayouts.astro'

const { frontmatter } = Astro.props
---

<BaseLayouts pageTitle={frontmatter.title}>
  <!-- <h1>{frontmatter.title}</h1> -->

  <p>Publicado el: {frontmatter.pubDate.toString().slice(0, 10)}</p>

  <p><em>{frontmatter.description}</em></p>

  <p>Escrito por {frontmatter.author}</p>

  <img src={frontmatter.image.url} width='300' alt={frontmatter.image.alt} />

  <p>Tags [{frontmatter.tags.join()}]</p>

  <!-- <ul>
      {frontmatter.tags.map((tag) => <li>{tag}</li>)}
    </ul>
     -->
  <slot />
</BaseLayouts>
